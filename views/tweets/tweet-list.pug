if tweets
  each tweet in tweets
    div(class="card tweet-element")
      div(class="card-body d-flex flex-column")
        div(class="d-flex flex-row align-items-center pb-2")
          img(class="small-avatar me-3" src=tweet.author.avatar)
          span(class="flex-fill")= tweet.author.username
          if editable && tweet.author._id.toString() === currentUser._id.toString()
            div(class="d-flex flex-row justify-content-center")
              a(class="fa-solid fa-edit pe-2 text-success" href="/tweets/edit/" + tweet._id)
              i(class="fa-solid fa-minus-circle text-danger pointer-cursor" tweetid=tweet._id)
        div(class="text-primary")= tweet.content